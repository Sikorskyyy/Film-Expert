<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.android.fe.filmexpert" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="at.android.fe.filmexpert.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.android.fe.filmexpert.SettingsActivity"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="at.android.fe.filmexpert.GuessActivity"
            android:label="@string/title_activity_guess"
            android:parentActivityName="at.android.fe.filmexpert.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.android.fe.filmexpert.MainActivity" />
        </activity>
        <activity
            android:name="at.android.fe.filmexpert.MovieInfoActivity"
            android:label="@string/title_activity_wrong_guess"
            android:parentActivityName="at.android.fe.filmexpert.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.android.fe.filmexpert.MainActivity" />
        </activity>
        <activity
            android:name="at.android.fe.filmexpert.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="at.android.fe.filmexpert.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.android.fe.filmexpert.MainActivity" />
        </activity>
        <activity
            android:name="at.android.fe.filmexpert.GameOverActivity"
            android:label="@string/title_activity_game_over"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
